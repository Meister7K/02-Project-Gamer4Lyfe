<div class="main-container">
    <div class="sub-container">
        <header>
            <h1>Dungeon Game</h1>
        </header>
        <div class="welcome-buttons">
            <div class="form-grid">
                <div class="inputContainer">
                <div class="title">
                    <h2>Log In</h2>
                </div>
                <form id="logForm" class="log-form" action="/Main/views/profile.handlebars" method="post">
                    <div>
                        <label for="username">Username:</label>
                         <input class="emailBox eb_error" type="email" id="userEmail" name="email" placeholder="Email">
                        {{!-- <input class="userBox ub_error" type="text" id="username" name="username" placeholder="Username"> --}}
                    </div>
                    <div>
                        <label for="password">Password:</label>
                        <input class="passBox pb_error" type="password" id="userPass" name="password" placeholder="Password">
                    </div>
                    <button id="logInButton" class="button" type="submit">Log In</button>
                </form>
            </div>
            <div class="inputContainerSu">
                <div class="title">
                    <h2>Sign Up</h2>
                </div>
                <form id="signForm" class="sign-form" action="/" method="get">
                    <div>
                        <label for="username">Username:</label>
                        <input class="userBox" type="text" id="username" name="username" placeholder="Username">
                    </div>
                    <div>
                        <label for="email">Email:</label>
                        <input class="emailBox" type="text" id="email" name="email" placeholder="Email">
                    </div>
                    <div>
                        <label for="password">Password:</label>
                        <input class="passBox" type="password" id="pass" name="password" placeholder="Password">
                    </div>
                    <div>
                        <label for="confirmation">Confirm Password:</label>
                        <input class="passBox" type="password" id="conPass" name="password" placeholder="Confirm Password">
                    </div>
                    <button id="signUpButton" class="button" type="submit">Sign Up</button>
                </form>
            </div>
            </div>
        </div>
    </div>
</div>
